extends base

append head
  - var title = attributes.title

append bodyStart
  - var activeSection = 'blog'

block content
  h1= attributes.title
  p.date= attributes.date
  div
    !{body}

  ul.pagination
    li
      if previous
        a(href=previous.attributes.link, title=previous.attributes.title)
          +icon('angle-double-left')
          =' Previous'
      else
        span No Older Posts
    li
      a(href='./')
        +icon('list-ul')
        =' List'
    li
      if next
        a(href=next.attributes.link, title=next.attributes.title)
          +icon('angle-double-right')
          =' Next'
      else
        span No Newer Posts