mixin icon(iconName)
    &nbsp;
    i(class=['fa', 'fa-' + iconName])
    &nbsp;

doctype 5
html
  head
    block head
    title= 'Cory Lucas DOT Com | ' + title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/bower/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bower/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='/bower/highlightjs/styles/magula.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Arvo|Roboto:400,700,400italic', type='text/css')
    //if lt IE 9
      script(type='text/javascript', src='/bower/html5shiv/dist/html5shiv.js')
      script(type='text/javascript', src='/bower/respond/dest/respond.min.js')

    link(rel='stylesheet', href='/stylesheets/site.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    block bodyStart
    div#wrap
      div.container
        div(class='navbar navbar-default', role='navigation')
          div.navbar-header
            button(type='button', class='navbar-toggle', data-toggle='collapse', data-target='.navbar-ex1-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/')
              strong Cory Lucas DOT Com
          div(class='collapse navbar-collapse navbar-ex1-collapse')
            ul(class='nav navbar-nav navbar-right')
              li(class=(activeSection=='about')?'active':'')
                a(href='/')
                  +icon('male')
                  span &nbsp;About
              li(class=(activeSection=='blog')?'active':'')
                a(href='/blog/')
                  +icon('book')
                  span &nbsp;Blog
              li(class=(activeSection=='resume')?'active':'')
                a(href='/resume.html')
                  +icon('file-text')
                  span &nbsp;R&eacute;sum&eacute;
        block content

    div.footer
      !='&copy; Cory Lucas 2013'

    script(type='text/javascript', src='/bower/jquery/jquery.min.js')
    script(type='text/javascript', src='/bower/bootstrap/dist/js/bootstrap.min.js')
    script(type='text/javascript', src='/bower/highlightjs/highlight.pack.js')
    script hljs.initHighlightingOnLoad();
    script(type='text/javascript', src='/javascripts/analytics.js')

